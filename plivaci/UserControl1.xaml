        <TextBlock Text="ime:" FontSize="20" Canvas.Left="28" Canvas.Top="218" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBlock Text="Ime:" FontSize="20" Canvas.Left="24" Canvas.Top="40"/>
